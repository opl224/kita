
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /groups/{groupId} {
      allow read, create: if request.auth != null;

      match /messages/{messageId} {
        allow read, create: if request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
      }
    }

    match /users/{userId} {
      // Allow any authenticated user to read user profiles (for names, avatars, etc.)
      allow read: if request.auth != null;
      // Allow users to update only their own profile
      allow update: if request.auth.uid == userId;
      // Disallow direct creation/deletion from client
      allow create, delete: if false;
    }
  }
}
